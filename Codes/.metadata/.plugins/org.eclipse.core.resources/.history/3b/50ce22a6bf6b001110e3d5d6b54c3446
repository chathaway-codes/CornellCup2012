#include <cassert>
#include "IO_Thread.hpp"

using namespace std;

void IO_Thread::log(LogLevel level, char *id, char *m)
{
	this->push_back(new Message(level, id, m));
}


void IO_Thread::addFilter(IO_Filter *filter)
{
}

IO_Thread::IO_Thread()
	: running(false)
{
	QThread();
}

IO_Thread::~IO_Thread()
{
	while(this->filters.size()) {
		delete filters.front();
		filters.pop_front();
	}

	// If messages isn't empty, theres a problem...
	assert(messages.size() == 0);
}

void IO_Thread::run()
{
	if(running)
		return;
	running = true;

	while(messages.size())
	{
		for(list<IO_Filter*>::iterator it = this->filters.begin(); it != filters.end(); it++) {
			if((*it)->applies((messages.front())->level, (messages.front())->id)) {
				(*it)->write((messages.front())->level, (messages.front())->id, (messages.front())->message);
			}
		}
		delete messages.front();
		messages.pop();
	}
}

void IO_Thread::push_back(Message *m)
{
	this->messages.push(m);
	if(!this->running)
		this->start();
}

// Static functions
IO_Thread *IO_Thread::getInstance()
{
	if(IO_Thread::instance == NULL) {
		IO_Thread::instance = new IO_Thread();
	}
	return IO_Thread::instance;
}

void IO_Thread::cleanup()
{
	if(IO_Thread::instance != NULL)
		delete IO_Thread::instance;
}

IO_Thread *IO_Thread::instance = NULL;
